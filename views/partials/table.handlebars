<table class={{page}} id="datatable">
  <thead>
    <tr>
      {{#each tableData}}
        <th id={{Field}} class="{{Type}} {{Null}} {{Key}} {{hasForeignKey [Field] ../fkInfo}}">
          {{lookup ../headerNames [Field]}}
        </th>
        {{!-- <th id={{Field}} class="{{Type}} {{Null}} {{Key}}">{{lookup ../headerNames [Field]}}</th> --}}
        {{#if (ifEquals Field ../fkInfo)}}
          {{#with (lookup ../fkTable [Field])}}
            {{#with name}}
              <th id="{{Field}}" headers={{getReferenceTable ../../Field ../../../fkInfo}}
                class="{{Type}} {{Null}} {{Key}} FKname">
                {{lookup ../../../headerNames [Field]}}
              </th>
            {{/with}}
          {{/with}}
        {{/if}}
      {{/each}}
      <th>Remove</th>
    </tr>
    <tr id="input-row" class="d-hidden">
      {{#each tableData}}
        <td headers={{Field}}> <input type="text" /> </td>
        {{#if (ifEquals Field ../fkInfo)}}
          {{#with (lookup ../fkTable [Field])}}
            {{#with name}}
              <td headers={{Field}}> <input type="text" /> </td>
            {{/with}}
          {{/with}}
        {{/if}}
      {{/each}}
      <td></td>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>
<div>
  <div id="dataInfo"> </div>
